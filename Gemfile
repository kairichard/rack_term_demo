source :rubygems

# We are not loading Active Record, nor Active Resources etc.
# We can do this in any app by simply replacing the rails gem
# by the parts we want to use.
gem "actionpack", "~> 3.2"
gem "railties",   "~> 3.2"
gem "tzinfo"

gem 'websocket-rack'
gem 'faye'
# Let's use thin
gem "thin"
gem 'debugger', group: [:development, :test]
